#pragma config(Motor,  port10,          rightRear,     tmotorVex393, openLoop)
#pragma config(Motor,  port5,           leftArm,       tmotorVex393, openLoop)
#pragma config(Motor,  port6,           rightArm,      tmotorVex393, openLoop)
